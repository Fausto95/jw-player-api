{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": [
    "plugin:@coorpacademy/coorpacademy/prettier"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": [
    "@coorpacademy/coorpacademy"
  ],
  "settings": {
    "import/ignore": ["node_modules", "\\.css$"]
  },
  "globals": {
    "browser": true
  }
}
